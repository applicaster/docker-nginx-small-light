#!/bin/bash
# # vi: set ft=sh :

set -o errexit

CONTAINER_NAME="nginx-small-light-test"
SERVER_IP="$(docker-machine ip default)"

docker build -t nginx-small-light-test .

docker kill $CONTAINER_NAME > /dev/null || true
docker wait $CONTAINER_NAME > /dev/null || true
docker rm  $CONTAINER_NAME > /dev/null

docker run \
  -d \
  --name $CONTAINER_NAME \
  -p 5000:80 \
  nginx-small-light-test \

sleep 5

curl -I "http://$SERVER_IP:5000/test.jpg"

docker kill $CONTAINER_NAME
